consul = "<%= @config['consul'] %>"
<% if @config['token'] %>token = "<%= @config['token'] %>"<% end %>
retry = "<%= @config['retry'] %>"
max_stale = "<%= @config['max-stale'] %>"

auth {
  enabled = <%= @config['auth'].empty? ? 'false' : 'true' %>
  <% if @config['auth'] %>username = "<%= @config['auth']['username'] %>"<% end %>
  <% if @config['auth'] %>password = "<%= @config['auth']['password'] %>"<% end %>
}

ssl {
  enabled = <%= @config['ssl'] ? 'true' : 'false' %>
  verify = <%= @config['ssl-verify'] ? 'true' : 'false' %>
}

syslog {
  enabled = <%= @config['syslog'] ? 'true' : 'false' %>
  facility = <%= @config['syslog-facility'] %>
}
